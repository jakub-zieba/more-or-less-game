<Window x:Class="MoreLess.EndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoreLess"
        mc:Ignorable="d"
        Title="EndWindow" Height="500" Width="700">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="42,83,41.6,163.4">
        Game finished, your score:
        </TextBlock>
        <TextBlock x:Name="scoreDisplayBox" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
                   />
        <Button 
            Margin="16,226,135.6,25.4" 
            HorizontalAlignment="Center"
            Click="MainMenu" 
            VerticalAlignment="Center" RenderTransformOrigin="0.287,-2.786">
            Main menu
        </Button>
        <Button 
            Margin="286,226,135.6,25.4" 
            HorizontalAlignment="Center"
            Click="Exit" 
            VerticalAlignment="Center" RenderTransformOrigin="0.287,-2.786">
            Exit
        </Button>
    </Grid>
</Window>
